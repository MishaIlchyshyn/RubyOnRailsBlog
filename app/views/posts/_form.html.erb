<%= render 'shared/errors', obj: @post %>

<div class="row">
    <div class="col-xs-12">
        <%= form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :title %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title of post",
                    autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :body %>
                </div>
                <div class="col-sm-8">
                    <%= f.rich_text_area :body, class: "form-control", placeholder: "Body of post" %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :image %>
                </div>
                <div class="col-sm-8">
                    <%= f.file_field :image %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: 'btn btn-primary btn-large' %>
                </div>
            </div>
        <% end %>
    </div>
</div>

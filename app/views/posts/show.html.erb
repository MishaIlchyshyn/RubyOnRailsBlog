<div class="container">
    <div class="row">
        <div class="col-xs-12"> 
            <h2 align="center"><%= @post.title %></h2>
            <div class="post-img"><%= image_tag(@post.image.thumb.url, alt: 'Image') if @post.image? %></div>
            <hr/>
            <%= simple_format(@post.description) %>

            <div class="edit-delete">
                <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-xs btn-primary" %>
                <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: "Are you sure?"},
                                            class: "btn btn-xs btn-danger" %>
                <span class="views"><i class="far fa-eye"></i> <%= @post.hits %></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-8">
            <div class="comments">
                <h2>Comments:</h2>
                <hr />

                <%= render @post.comments %>
            </div>
        </div>  

        <div class="col-xs-4">
            <div class="add-comment">
                <h2>Add a comment:</h2>
                <%= render 'comments/form' %> 
            </div>
        </div>
    </div> 
</div>                   
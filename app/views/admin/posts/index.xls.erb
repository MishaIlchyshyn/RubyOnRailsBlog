<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
    xmlns:o="urn:schemas-microsoft-com:office:office"
    xmlns:x="urn:schemas-microsoft-com:office:excel"
    xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
    xmlns:html="http://www.w3.org/TR/REC-html40">
    <Worksheet ss:Name="Sheet1">
        <Table>
            <Row>
                <Cell><Data ss:Type="String">Id</Data></Cell>
                <Cell><Data ss:Type="String">Image post</Data></Cell>
                <Cell><Data ss:Type="String">Title post</Data></Cell>
                <Cell><Data ss:Type="String">User</Data></Cell>
                <Cell><Data ss:Type="String">Date Create</Data></Cell>
                <Cell><Data ss:Type="String">Views</Data></Cell>
            </Row>
        <% @posts.each do |post| %>
            <Row>
                 <Cell><Data ss:Type="Number"><%= post.id %></Data></Cell>
                <Cell><Data ss:Type="String"><%= post.image %></Data></Cell>
                <Cell><Data ss:Type="String"><%= post.title %></Data></Cell>
                <Cell><Data ss:Type="String"><%= current_user.email %></Data></Cell>
                <Cell><Data ss:Type="Number"><%= post.created_at.strftime("%m.%m.%Y  %k:%M") %></Data></Cell>
                <Cell><Data ss:Type="Number"><%= post.hits %></Data></Cell>
            </Row>
        <% end %>
        </Table>
    </Worksheet>
</Workbook>
